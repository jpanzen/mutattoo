---
import Image from "astro/components/Image.astro";
const { name, description, igButton, photo, aboutButton, aboutUrl, igUrl } = Astro.props;
---

<div class="flex flex-col rounded-md border border-white20 grow bg-dark sm:max-w-[calc(50%-30px)] z-10">
	<div class=`flex flex-row items-end p-5 ${photo} h-[300px] rounded-md`>
		<h3 class="font-unifraktur text-[48px]">{name}</h3>
	</div>
	<div class="flex flex-col p-5 gap-8">
		<p>{description}</p>
		<div class="flex gap-4">
			<a class="flex flex-row gap-3 items-center px-3 py-[6px] border border-white10 bg-white10 rounded-[3px] text-base w-fit" target="_blank" href={igUrl}>
				<Image src={"/ikonky/instagramIcon.svg"} width={16} height={16} alt={"Instagram ikona"} />
				{igButton}
			</a>
			<a class="flex flex-row gap-3 items-center px-3 py-[6px] border border-white10 bg-white10 rounded-[3px] text-base w-fit" href={aboutUrl}>
				{aboutButton}
			</a>
		</div>
	</div>
</div>