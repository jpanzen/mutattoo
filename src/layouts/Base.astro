---
import '../global.css'
import Navbar from "../components/Navbar.astro"
import Footer from '../components/Footer.astro'
const { pageName } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth scroll-pt-[60px]">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script defer src="https://cloud.umami.is/script.js" data-website-id="d7ef5221-f761-433f-8136-e53e0476ef15"></script>
		<title>{ pageName || 'Mutattoo - Tatérské studio v Havířově' }</title>
	</head>
	<body class="font-nunito bg-dark text-white text-[18px]">
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
